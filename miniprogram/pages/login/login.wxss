.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--bg-color);
  padding: var(--page-padding);
}

.header-image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: var(--spacing-lg);
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  border: 4rpx solid white;
  background: white;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.login-box {
  width: 92%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.input-group {
  margin-bottom: var(--spacing-md);
}

.input-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
  background-color: var(--bg-secondary);
  border-radius: var(--card-radius);
  overflow: hidden;
  padding: 0 var(--spacing-md);
  height: 90rpx;
  border: 1px solid rgba(0, 0, 0, 0.05);
  transition: var(--transition-fast);
}

.input-wrapper:focus-within {
  border-color: var(--primary-color-light);
  box-shadow: 0 0 0 2px rgba(7, 193, 96, 0.1);
}

.input-icon {
  margin-right: var(--spacing-md);
  font-size: 36rpx;
}

.input-control {
  flex: 1;
  height: 100%;
  padding: 0;
  font-size: 30rpx;
  background: transparent;
  border: none;
}

.remember-password {
  margin-bottom: var(--spacing-lg);
  display: flex;
  align-items: center;
}

.remember-text {
  font-size: 28rpx;
  color: var(--text-color-light);
  margin-left: var(--spacing-xs);
}

.login-btn {
  width: 100% !important;
  margin-bottom: var(--spacing-lg);
  height: 90rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 50rpx;
}

.register-link {
  text-align: center;
  margin-top: var(--spacing-sm);
  display: flex;
  justify-content: center;
  align-items: center;
}

.register-text {
  color: var(--text-color-light);
  font-size: 28rpx;
}

.register-action {
  color: var(--primary-color);
  font-size: 28rpx;
  margin-left: var(--spacing-xs);
  font-weight: 500;
}

/* 用户信息卡片 */
.user-info {
  width: 92%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: var(--spacing-lg);
  width: 100%;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto var(--spacing-md);
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
  border: 4rpx solid white;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.username {
  font-size: 36rpx;
  color: var(--text-color);
  margin-bottom: var(--spacing-sm);
  font-weight: 500;
}

.user-status {
  margin-top: var(--spacing-sm);
}

.logout-btn {
  width: 80% !important;
  background: linear-gradient(135deg, var(--error-color), #ff7875);
  margin-top: var(--spacing-md);
} 