.container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.login-box {
  width: 80%;
  padding: 30rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
  font-weight: bold;
}

.input-group {
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.remember-password {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.remember-password checkbox {
  margin-right: 10rpx;
  transform: scale(0.8);
}

.login-btn {
  width: 100% !important;
  margin-bottom: 20rpx;
}

.register-link {
  text-align: center;
  color: #576b95;
  font-size: 28rpx;
}

.user-info {
  text-align: center;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.username {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.logout-btn {
  width: 60% !important;
} 