.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  width: 100%;
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 22px;
  font-weight: bold;
  color: #333;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100px;
}

.loading-icon {
  width: 40px;
  height: 40px;
  margin-bottom: 10px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error, .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 80px;
  text-align: center;
}

.error text, .empty-state text {
  margin: 20px 0;
  color: #666;
  font-size: 16px;
}

.error-text {
  color: #e74c3c;
  font-weight: bold;
  margin: 15px 0 5px 0;
}

.error-tip {
  color: #7f8c8d;
  font-size: 14px;
  margin: 5px 0 15px 0;
}

.error-buttons {
  display: flex;
  justify-content: center;
  gap: 15px;
  width: 100%;
}

.back-btn {
  background-color: #95a5a6;
}

.animation-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.desc {
  margin: 20px 0;
  color: #666;
  font-size: 14px;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 20px;
  width: 100%;
}

.action-btn {
  background-color: #4CAF50;
  color: white;
  padding: 0 20px;
  font-size: 14px;
  border-radius: 4px;
}

.share-btn {
  background-color: #2196F3;
} 