/**index.wxss**/

page {
  /* padding-top: 54rpx; */
  padding-bottom: 60rpx;
  background-color: #f8fafe;
}

.container {
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.main {
  width: 90%;
  display: flex;
  flex-direction: column;
  font-family: PingFang SC;
}

.image_container {
  margin-top: 48rpx;
  display: flex;
  justify-content: center;
}

.title {
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.sub_title {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  line-height: 52rpx;
}

/* 一级标题字体 */
.font_title_1 {
  font-weight: 500;
  color: #000;
  font-size: 48rpx;
}

/* 二级标题字体 */
.font_title_2 {
  color: #000;
  font-size: 32rpx;
  font-weight: 500;
  font-family: "PingFang SC";
}

/* 内容字体 */
.font_content {
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.6);
  line-height: 52rpx;
}

.seperator {
  border-top: 2rpx solid #91e3b3;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

.ability_container {
  border: 2rpx solid #91e3b3;
  padding: 48rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #e8f8ee;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  box-shadow: 0 2px 8px rgba(7, 193, 96, 0.2);
  margin-top: 48rpx;
}

.ability_title {
  font-size: 36rpx;
  font-weight: 500;
  color: #06ad56;
}

.ability_item {
  color: rgba(0, 0, 0, 0.6);
  font-size: 28rpx;
}

.ability_item::before {
  content: "";
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #07c160;
  margin-right: 12rpx;
}

.step_container {
  box-sizing: border-box;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}

.step_title,
.step_content {
  padding: 8rpx;
  background-color: #fff;
}

.step_title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.step_id_container {
  display: flex;
  font-size: 28rpx;
  align-items: center;
  height: 36rpx;
  line-height: 36rpx;
  font-weight: 400;
}

.step_id_mark {
  background-color: #07c160;
  border-radius: 2px 0px 0px 2px;
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  width: 70rpx;
  text-align: center;
}

.step_id_content {
  width: 50rpx;
  text-align: center;
  background-color: #fff;
  color: #07c160;
  border: 1px solid #07c160;
  border-left: none;
  box-sizing: border-box;
  border-radius: 0px 2px 2px 0px;
}

.step_content {
  background-color: #fff;
  color: #666;
  font-size: 28rpx;
  word-break: break-all;
}

.text_zone {
  margin-top: 20rpx;
  margin-bottom: 48rpx;
  color: rgba(0, 0, 0, 0.6);
}

.code_zone {
  background-color: #102613;
  color: rgba(255, 255, 255, 0.85);
  border-radius: 12rpx;
  padding: 0rpx 32rpx;
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
  position: relative;
  margin-bottom: 48rpx;
}

.image_zone {
  display: flex;
  justify-content: center;
  margin-bottom: 48rpx;
}

.btn-copy {
  border-radius: 12rpx;
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.bottom-tip {
  margin-top: 10rpx;
  color: rgba(0, 0, 0, 0.9);
  font-size: 28rpx;
  line-height: 52rpx;
}

.button {
  width: 70%;
  text-align: center;
  margin: 40rpx auto 0 auto;
  color: white;
  border-radius: 5px;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
}

.btn-view-demo-page {
  width: 100%;
  text-align: center;
  color: white;
  border-radius: 5px;
  font-size: 26rpx;
  padding: 16rpx 0rpx;
  box-sizing: border-box;
  border: 1px solid #07c160;
  color: #07c160;
  font-size: 32rpx;
}

.with-margin {
  margin-top: 48rpx;
}

.text_link{
  color: #07c160;
  text-decoration-line: underline;
}

.upload-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.upload-btn {
  width: 80%;
  margin: 20rpx 0;
  height: 80rpx;
  font-size: 30rpx;
}

.btn-icon {
  margin-right: 8rpx;
  font-weight: bold;
}

.preview-container {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border-radius: 12rpx;
}

.preview-image {
  width: 90%;
  max-width: 600rpx;
  height: 400rpx;
  object-fit: contain;
  border-radius: 8rpx;
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.15);
}

.canvas-section {
  width: 90%;
}

.canvas-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  border: 1px dashed #ddd;
}

.canvas {
  display: block;
  margin: 0 auto;
}

.selection-info {
  margin: 20rpx 0;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 45%;
}

.info-label {
  color: #666;
  font-size: 26rpx;
  margin-right: 8rpx;
}

.info-value {
  color: #333;
  font-size: 26rpx;
  font-weight: 500;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  gap: 20rpx;
}

.button-group .btn {
  flex: 1;
  margin: 0;
  font-size: 28rpx;
}

.btn-active {
  background-color: #e8f8ee;
  color: #07c160;
  border: 1px solid #07c160;
}

.control-section {
  width: 90%;
}

.slider-group {
  margin: 20rpx 0;
}

.slider-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.slider-value {
  color: #07c160;
  font-weight: 500;
}

slider {
  margin: 16rpx 0 30rpx 0;
}

.process-btn {
  width: 100%;
  margin-top: 20rpx;
  height: 90rpx;
  font-size: 32rpx;
}

.btn-stop {
  background-color: #ff4d4f;
}

.btn-stop:active {
  background-color: #cf1322;
}

.footer {
  margin-top: 30rpx;
  padding: 20rpx;
  width: 90%;
  text-align: center;
  color: #999;
  font-size: 24rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

/* 进度步骤条 */
.process-steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
}

.step-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid #ddd;
  transition: all 0.3s ease;
}

.step-text {
  font-size: 24rpx;
  color: #999;
  transition: all 0.3s ease;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background-color: #ddd;
  position: relative;
  z-index: 1;
}

.step-current .step-icon {
  background-color: #07c160;
  color: white;
  border-color: #07c160;
  transform: scale(1.1);
  box-shadow: 0 0 10rpx rgba(7, 193, 96, 0.3);
}

.step-current .step-text {
  color: #07c160;
  font-weight: 500;
}

.step-done .step-icon {
  background-color: #e8f8ee;
  color: #07c160;
  border-color: #07c160;
}

.step-done .step-text {
  color: #07c160;
}

/* 卡片样式 */
.card {
  width: 90%;
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}