<view class="container">
  <video 
    src="{{videoUrl}}" 
    controls 
    class="video-player"
    bindplay="onPlay"
    bindpause="onPause"
    bindended="onEnded">
  </video>
  
  <view class="action-buttons">
    <button class="save-btn" bindtap="saveVideo">保存视频</button>
    <button class="share-btn" open-type="share">分享给好友</button>
  </view>
</view> 